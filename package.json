{
  "name": "mindy",
  "displayName": "mindy",
  "description": "Mindmap + TODOs = ðŸš€ðŸ”¥",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:mindy"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "mindy",
        "aliases": [
          "Mindy"
        ],
        "extensions": [
          "MINDY",
          ".mindy"
        ]
      }
    ],
    "commands": [
      {
        "command": "mindy.createOrOpenProject",
        "title": "Mindy: Open"
      },
      {
        "command": "mindy.showView",
        "title": "Mindy: Show View",
        "when": "editorLangId == mindy"
      },
      {
        "command": "mindy.toggleTask",
        "title": "Mindy: Toggle Task",
        "when": "editorLangId == mindy"
      },
      {
        "command": "mindy.toggleStart",
        "title": "Mindy: Toggle Start"
      },
      {
        "command": "mindy.toggleDone",
        "title": "Mindy: Toggle Done"
      }
    ],
    "keybindings": [
      {
        "command": "mindy.toggleTask",
        "key": "ctrl+enter",
        "when": "editorTextFocus && editorLangId == mindy",
        "linux": "ctrl+enter",
        "mac": "cmd+enter",
        "win": "ctrl+enter"
      },
      {
        "command": "mindy.toggleStart",
        "key": "Alt+s",
        "when": "editorTextFocus && editorLangId == mindy"
      },
      {
        "command": "mindy.toggleDone",
        "key": "Alt+d",
        "when": "editorTextFocus && editorLangId == mindy"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.12",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "lodash-es": "^4.17.21"
  }
}
