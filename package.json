{
  "name": "mindo",
  "displayName": "Mindo",
  "publisher": "karlito40",
  "description": "Mindmap + TODOs = ðŸš€ðŸ”¥",
  "version": "0.2.1",
  "icon": "assets/icon.png",
  "license": "MIT",
  "engines": {
    "vscode": "^1.99.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/karlito40/mindo.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:mindo"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "mindo",
        "aliases": [
          "Mindo"
        ],
        "extensions": [
          "MINDO",
          ".mindo"
        ]
      }
    ],
    "commands": [
      {
        "command": "mindo.createOrOpenProject",
        "title": "Mindo: Open"
      },
      {
        "command": "mindo.showView",
        "title": "Mindo: Show View",
        "when": "editorLangId == mindo"
      },
      {
        "command": "mindo.toggleTask",
        "title": "Mindo: Toggle Task",
        "when": "editorLangId == mindo"
      },
      {
        "command": "mindo.toggleStart",
        "title": "Mindo: Toggle Start",
        "when": "editorLangId == mindo"
      },
      {
        "command": "mindo.toggleDone",
        "title": "Mindo: Toggle Done",
        "when": "editorLangId == mindo"
      }
    ],
    "keybindings": [
      {
        "command": "mindo.toggleTask",
        "key": "ctrl+enter",
        "when": "editorTextFocus && editorLangId == mindo",
        "linux": "ctrl+enter",
        "mac": "cmd+enter",
        "win": "ctrl+enter"
      },
      {
        "command": "mindo.toggleTask",
        "key": "Alt+enter",
        "when": "editorTextFocus && editorLangId == mindo"
      },
      {
        "command": "mindo.toggleStart",
        "key": "Alt+s",
        "when": "editorTextFocus && editorLangId == mindo"
      },
      {
        "command": "mindo.toggleDone",
        "key": "Alt+d",
        "when": "editorTextFocus && editorLangId == mindo"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.16",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  }
}
